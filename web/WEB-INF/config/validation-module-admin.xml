<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

    <formset>
        <form name="importForm">
            <field property="importFile" depends="required">
                <arg0 key="itracker.web.attr.file"/>
            </field>
        </form>

        <form name="reportForm">
            <field property="name" depends="required">
                <arg0 key="itracker.web.attr.name"/>
            </field>
            <field property="nameKey" depends="required">
                <arg0 key="itracker.web.attr.namekey"/>
            </field>
            <field property="description" depends="required">
                <arg0 key="itracker.web.attr.description"/>
            </field>
            <field property="dataType" depends="required">
                <arg0 key="itracker.web.attr.datatype"/>
            </field>
            <field property="reportType" depends="required">
                <arg0 key="itracker.web.attr.reporttype"/>
            </field>
            <field property="className" depends="required">
                <arg0 key="itracker.web.attr.class"/>
            </field>
            <field property="fileDataFile" depends="requiredif">
                <arg0 key="itracker.web.attr.file"/>
                    <var>
                        <var-name>field[0]</var-name>
                        <var-value>fileData</var-value>
                    </var>
                    <var>
                        <var-name>fieldTest[0]</var-name>
                        <var-value>NULL</var-value>
                    </var>
                    <var>
                        <var-name>field[1]</var-name>
                        <var-value>fileDataFile</var-value>
                    </var>
                    <var>
                        <var-name>fieldTest[1]</var-name>
                        <var-value>NULL</var-value>
                    </var>
                    <var>
                        <var-name>fieldJoin</var-name>
                        <var-value>AND</var-value>
                    </var>
            </field>
            <field property="fileData" depends="requiredif">
                <arg0 key="itracker.web.attr.contents"/>
                    <var>
                        <var-name>field[0]</var-name>
                        <var-value>fileData</var-value>
                    </var>
                    <var>
                        <var-name>fieldTest[0]</var-name>
                        <var-value>NULL</var-value>
                    </var>
                    <var>
                        <var-name>field[1]</var-name>
                        <var-value>fileDataFile</var-value>
                    </var>
                    <var>
                        <var-name>fieldTest[1]</var-name>
                        <var-value>NULL</var-value>
                    </var>
                    <var>
                        <var-name>fieldJoin</var-name>
                        <var-value>AND</var-value>
                    </var>
            </field>
        </form>

        <form name="componentForm">
            <field property="name" depends="required">
                <arg0 key="itracker.web.attr.name"/>
            </field>
            <field property="description" depends="required">
                <arg0 key="itracker.web.attr.description"/>
            </field>
        </form>

        <form name="versionForm">
            <field property="description" depends="required">
                <arg key="itracker.web.attr.description" position="0"/>
            </field>
            <field property="id" depends="required">
                <arg key="itracker.web.attr.id" position="0"/>
            </field>
            <field property="number" depends="required">
                <arg key="itracker.web.attr.number" position="0"/>
            </field>
        </form>
    </formset>
</form-validation>
