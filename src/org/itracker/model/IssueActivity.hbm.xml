<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="true" package="org.itracker.model">

	<class name="IssueActivity" table="issueactivitybean">
		<id name="id" column="id" type="int" unsaved-value="null">
			<generator class="native"/>
		</id>
		<property name="type" column="activity_type" not-null="true" unique="false"/>		
		<property name="description" not-null="true" unique="false"/>		
		<property name="notificationSent" column="notification_sent" not-null="true" unique="false"/>						
		<property name="createDate" column="create_date" not-null="true" unique="false"/>
		<property name="lastModifiedDate" column="last_modified" not-null="true" unique="false"/>		
		<many-to-one name="issue" column="issue_id" class="Issue"/>		
		<many-to-one name="user" column="user_id" class="User"/>						
	</class>

    <!-- Named queries (loaded, validated and cached at application startup). -->
    
    <query name="IssueActivitiesByIssueQuery"><![CDATA[
    select activity 
    from IssueActivity as activity
    where activity.issue.id = :issueId ]]>
    </query>
    
    <query name="IssueActivitiesByIssueAndNotificationQuery"><![CDATA[
    select activity 
    from IssueActivity as activity
    where activity.issue.id = :issueId 
    and activity.notificationSent = :notificationSent ]]>
    </query>
    
</hibernate-mapping>
