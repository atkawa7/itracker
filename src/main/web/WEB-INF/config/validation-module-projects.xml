<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

    <formset>

        <form name="issueForm">
            <field property="description" depends="required">
                <arg0 key="itracker.web.attr.description"/>
            </field>
            <field property="history" depends="required">
                <arg0 key="itracker.web.attr.detaileddescription"/>
            </field>
        </form>

        <form name="issueRelationForm">
            <field property="relationType">
            </field>
        </form>

        <form name="moveIssueForm">
            <field property="projectId" depends="required">
                <arg0 key="itracker.web.attr.project"/>
            </field>
        </form>

    </formset>
</form-validation>
