<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!--
   | For more configuration infromation and examples see the Jakarta Log4j
   | website: http://jakarta.apache.org/log4j
   | See also http://wiki.apache.org/logging-log4j/Log4jXmlFormat
 -->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="FATAL"/>
        <param name="Target" value="System.out"/>

        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %-5p [%c{1}] %m%n"/>
        </layout>
    </appender>
    <appender name="file" class="org.apache.log4j.FileAppender">
        <param name="File" value="target/itracker-test.log"/>
        <param name="Append" value="true"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE}	%-5p %c - %m%n"/>
        </layout>
    </appender>
    <category name="org.itracker">
        <priority value="INFO"></priority>
        <appender-ref ref="file"/>
    </category>
    <!-- should mock a mail-session, throws exceptions -->
    <category name="org.itracker.services.implementations.EmailService">
        <priority value="FATAL"></priority>
        <appender-ref ref="file"/>
    </category>
    <category name="org.itracker.selenium" additivity="false">
        <priority value="INFO"></priority>
        <appender-ref ref="file"/>
    </category>

    <category name="org.hibernate">
        <priority value="FATAL"></priority>
        <appender-ref ref="file"/>
    </category>

    <category name="com.dumbster">
        <priority value="INFO"></priority>
    </category>
    <root>
        <priority value="ERROR"/>
        <appender-ref ref="file" />
        <appender-ref ref="console"/>
    </root>

</log4j:configuration>
