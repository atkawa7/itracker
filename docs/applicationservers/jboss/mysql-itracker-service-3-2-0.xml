<datasources>
  <local-tx-datasource>
    <!-- remove this depends tag if you are not using the tcp connection url -->
    <jndi-name>ITrackerDS</jndi-name>
    <!-- for tcp connection, allowing other processes to use the hsqldb database -->
    <connection-url>jdbc:mysql://localhost/dev</connection-url>
    <driver-class>org.gjt.mm.mysql.Driver</driver-class>
    <user-name>itracker</user-name>
    <password>itracker</password>
    <!--example of how to specify class that determines if exception means connection should be destroyed-->
    <!--exception-sorter-class-name>org.jboss.resource.adapter.jdbc.vendor.DummyExceptionSorter</exception-sorter-class-name-->
    <min-pool-size>5</min-pool-size>
    <!-- <security-domain>Dev</security-domain> -->
  </local-tx-datasource>
</datasources>
