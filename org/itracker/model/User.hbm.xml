<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="true">


	<class name="org.itracker.model.User" table="userbean">
		<id name="id" column="id" type="int" unsaved-value="null">
			<generator class="native"/>
		</id>
		<property name="createDate" column="create_date" not-null="true" unique="false"/>
		<property name="lastModifiedDate" column="last_modified" not-null="true" unique="false"/>		
		<property name="login" not-null="true" unique="false"/>		
		<property name="password" column="user_password" not-null="true" unique="false"/>				
		<property name="firstName" column="first_name" not-null="true" unique="false"/>						
		<property name="lastName" column="last_name" not-null="true" unique="false"/>										
		<property name="email" not-null="true" unique="false"/>		
		<property name="status" not-null="true" unique="false"/>		
		<property name="superUser" column="super_user" not-null="true" unique="false" 
                    type="org.itracker.persistence.dao.IntBooleanType"/>				
		<property name="registrationType" column="registration_type" not-null="true" unique="false"/>						
		<many-to-one name="preferences" column="preferences_id" class="org.itracker.model.UserPreferences"/>		
		<bag name="permissions" table="Permission" cascade="all" lazy="true">
			<key>
				<column name="user_id"/>
			</key>
			<one-to-many class="org.itracker.model.Permission"/>
		</bag>

		<bag name="projects" table="project_owner_rel" lazy="true">
			<key>
				<column name="user_id"/>
			</key>
			<many-to-many class="org.itracker.model.Project" column="project_id" outer-join="auto"/>
		</bag>

	</class>
</hibernate-mapping>
